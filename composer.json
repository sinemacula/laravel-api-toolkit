{
    "name": "sinemacula/laravel-api-toolkit",
    "type": "library",
    "description": "A comprehensive Laravel toolkit for streamlined development of RESTful APIs",
    "keywords": [
        "sine macula",
        "laravel",
        "restful",
        "api",
        "toolkit"
    ],
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Ben Carey",
            "email": "bdmc@sinemacula.co.uk"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/database": "*",
        "illuminate/http": "*",
        "illuminate/notifications": "*",
        "illuminate/routing": "*",
        "illuminate/support": "*",
        "illuminate/validation": "*",
        "sinemacula/laravel-repositories": "^1.0",
        "sinemacula/laravel-resource-exporter": "dev-master"
    },
    "require-dev": {
        "laravel/framework": "*",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "SineMacula\\ApiToolkit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "SineMacula\\ApiToolkit\\ApiServiceProvider"
            ]
        }
    }
}
